<form id="toVerifier" method="post"  action="verificador">
    <input id="barCode" type="hidden" name="code"/>
</form>
<script>
    var codigo="";
    $(window).on('keypress',function(e){
        if(e.keyCode==13){
            $('#barCode').val(codigo);
            console.log(codigo);
            $('#toVerifier').submit();
            
        }else{
             codigo += String.fromCharCode(e.keyCode);
            // beep();
        }
        console.log(e.keyCode);
    });
</script>

